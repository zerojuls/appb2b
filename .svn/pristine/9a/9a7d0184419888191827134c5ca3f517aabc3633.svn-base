<script type="text/javascript">
var cb_sucursal;
$(document).ready(function(){
    $('#submit').on('click', (function(){
        var URL = '<?php echo base_url('pedido/agree_pedido'); ?>';
        var datos = $('#frmNew').serialize();
        send = true;
        $.ajax({
            type: "POST",
            dataType: "html",
            data: datos,
            url: URL,
            beforeSend: function(){
                $("#submit").attr("disabled", "disabled");
                $("#submit").html("Procesando ...");
            },
            success: function(msg) {
                jAlert(msg, TituloInformacion,function(){$('#loading').show();window.location.href='<?php echo base_url(); ?>';});
            },
            error: function() {
                jAlert('Surgi√≥ un error al confirmar el pedido!', TituloInformacion);
                send = false
            },
            complete: function() {
                if(send){
                    $(dlgNew).modal('hide');
                }else{
                    $("#submit").removeAttr("disabled");
                    $("#submit").html("Confirmar");
                }
            }
        });
    }));
});
</script>